html
	head
		title Sample Sign Up Page
		link(rel='stylesheet', href='/stylesheets/style.css')
	body
		h1 Sample Sign Up Page
		div#info Sign Up
		table
			tr
				td Email
				td
					input#email(type='email', size='20')
			tr
				td Password
				td
					input#password(type='password', size='20')
			tr
				td Verify Password
				td
					input#verifyPassword(type='password', size='20')
			tr
				td(colspan='2')
					button#signup-button Sign Up
			tr
				td.center(colspan='2')
					a(href='index.html') Back