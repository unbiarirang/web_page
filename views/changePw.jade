extends layout

block content
	head
		title Sample Change Password Page
		link(rel='stylesheet', href='/stylesheets/style.css')
	body
		h1 Sample Change Password Page
		div#info Change Password
		table
			tr
				td Email
				td
					input#email(type='email', size='20')
			tr
				td Old Password
				td
					input#old-password(type='password', size='20')
			tr
				td New Password
				td
					input#new-password(type='password', size='20')
			tr
				td Verify New Password
				td
					input#verify-new-password(type='password', size='20')
			tr
				td(colspan='2')
					button#change-button Change Password
			tr
				td.center(colspan='2')
					a(href='/') Back